<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.css.rookie.dao.manual.SysMenuDao">
    <resultMap id="BaseResultMap" type="com.css.rookie.vo.MenuTree">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="MENU_NAME" jdbcType="VARCHAR" property="menuName"/>
        <result column="PARENT_ID" jdbcType="VARCHAR" property="parentId"/>
        <result column="SORT" jdbcType="INTEGER" property="sort"/>
        <result column="HREF" jdbcType="VARCHAR" property="href"/>
        <result column="ICON" jdbcType="VARCHAR" property="icon"/>
        <result column="IS_SHOW" jdbcType="CHAR" property="isShow"/>
        <result column="PERMISSION" jdbcType="VARCHAR" property="permission"/>
        <result column="SFYX" jdbcType="CHAR" property="sfyx"/>
        <result column="CREATE_USER_ID" jdbcType="VARCHAR" property="createUserId"/>
        <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="LAST_UPDATE_USER_ID" jdbcType="VARCHAR" property="lastUpdateUserId"/>
        <result column="LAST_UPDATE_TIME" jdbcType="TIMESTAMP" property="lastUpdateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
      ID, MENU_NAME, PARENT_ID, SORT, HREF, ICON, IS_SHOW, PERMISSION, SFYX, CREATE_USER_ID,
      CREATE_TIME, LAST_UPDATE_USER_ID, LAST_UPDATE_TIME
    </sql>

    <select id="queryMenuTreeByRoleIds" resultMap="BaseResultMap">
        select
            m.ID, m.MENU_NAME as menuName, m.PARENT_ID as parentID, m.SORT, m.HREF, m.ICON, m.IS_SHOW as isShow, m.PERMISSION, m.SFYX, m.CREATE_USER_ID as createUserId,
            m.CREATE_TIME as createTime, m.LAST_UPDATE_USER_ID as lastUpdateUserId, m.LAST_UPDATE_TIME as lastUpdateTime
        from
            SYS_ROLE_MENU srm left join SYS_MENU m on srm.MENU_ID = m.ID
        where
            srm.SFYX = 1 and m.SFYX = 1
        <if test="allShow != true">
            and m.IS_SHOW = 1
        </if>
            and srm.ROLE_ID in
        <foreach item="roleId" index="index" collection="roleIds" open="(" separator="," close=")">
            #{roleId}
        </foreach>
        order by m.SORT
    </select>

    <select id="queryMenuTree" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from
            SYS_MENU
        where
            SFYX = 1
        order by SORT
    </select>

    <update id="delChildrenByParentId" parameterType="com.css.rookie.entity.SysMenu">
        update SYS_MENU
        <set>
            <if test="lastUpdateUserId != null">
                LAST_UPDATE_USER_ID = #{lastUpdateUserId,jdbcType=VARCHAR},
            </if>
            <if test="lastUpdateTime != null">
                LAST_UPDATE_TIME = #{lastUpdateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="sfyx != null">
                SFYX = #{sfyx,jdbcType=CHAR},
            </if>
        </set>
        where
        SFYX = 1 and PARENT_ID = #{parentId,jdbcType=VARCHAR}
    </update>

</mapper>