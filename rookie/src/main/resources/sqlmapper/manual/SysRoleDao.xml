<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.css.rookie.dao.manual.SysRoleDao">
    <resultMap id="BaseResultMap" type="com.css.rookie.entity.SysRole">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="ROLE_NAME" jdbcType="VARCHAR" property="roleName"/>
        <result column="SFYX" jdbcType="CHAR" property="sfyx"/>
        <result column="CREATE_USER_ID" jdbcType="VARCHAR" property="createUserId"/>
        <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="LAST_UPDATE_USER_ID" jdbcType="VARCHAR" property="lastUpdateUserId"/>
        <result column="LAST_UPDATE_TIME" jdbcType="TIMESTAMP" property="lastUpdateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
      ID, ROLE_NAME, SFYX, CREATE_USER_ID, CREATE_TIME, LAST_UPDATE_USER_ID, LAST_UPDATE_TIME
    </sql>

    <select id="queryRoleInfosCountByCondition" parameterType="java.util.Map" resultType="java.lang.Integer">
        select
            count(1)
        from
            SYS_ROLE
        where
            SFYX = 1
        <if test="search.roleName != null and search.roleName != ''">
            and ROLE_NAME like concat('%', #{search.roleName,jdbcType=VARCHAR}, '%')
        </if>
    </select>

    <select id="queryRoleInfosByCondition" parameterType="java.util.Map" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"/>
        from
            SYS_ROLE
        where
            SFYX = 1
        <if test="search.roleName != null and search.roleName != ''">
            and ROLE_NAME like concat('%', #{search.roleName,jdbcType=VARCHAR}, '%')
        </if>
            ORDER BY LAST_UPDATE_TIME desc
        <if test="pageSize != 0">
            limit #{start}, #{pageSize}
        </if>
    </select>

    <select id="queryRoleInfoById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from
            SYS_ROLE
        where
            SFYX = 1 and ID = #{id,jdbcType=VARCHAR}
    </select>

    <select id="queryRoleInfoByRoleName" parameterType="java.lang.String" resultType="java.lang.Integer">
        select
            count(1)
        from
            SYS_ROLE
        where
            SFYX = 1 and ROLE_NAME = #{roleName,jdbcType=VARCHAR}
    </select>

    <update id="delSysUserRoleByRoleId"  parameterType="com.css.rookie.entity.SysUserRole">
        update SYS_USER_ROLE
        <set>
            <if test="lastUpdateUserId != null">
                LAST_UPDATE_USER_ID = #{lastUpdateUserId,jdbcType=VARCHAR},
            </if>
            <if test="lastUpdateTime != null">
                LAST_UPDATE_TIME = #{lastUpdateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="sfyx != null">
                SFYX = #{sfyx,jdbcType=CHAR},
            </if>
        </set>
        where
            SFYX = 1 and Role_ID = #{roleId,jdbcType=VARCHAR}
    </update>

    <update id="delSysRoleMenuByRoleId"  parameterType="com.css.rookie.entity.SysRoleMenu">
        update SYS_ROLE_MENU
        <set>
            <if test="lastUpdateUserId != null">
                LAST_UPDATE_USER_ID = #{lastUpdateUserId,jdbcType=VARCHAR},
            </if>
            <if test="lastUpdateTime != null">
                LAST_UPDATE_TIME = #{lastUpdateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="sfyx != null">
                SFYX = #{sfyx,jdbcType=CHAR},
            </if>
        </set>
        where
            SFYX = 1 and Role_ID = #{roleId,jdbcType=VARCHAR}
    </update>

</mapper>